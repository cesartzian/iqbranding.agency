iq_black = #1e211e  // True color: #1e211e | Web safe color: #333333
iq_orange = #ff8d3f // True color: #ff8d3f | Web safe color: #ff9933
iq_dark_grey = #35373f // True color: #35373f | Web safe color: #333333
iq_white = #f8f1e5 // True color: #f8f1e5 | Web safe color: #ffffcc
iq_grey = #77777a // True color: #77777a | Web safe color; #666666

font_main = 'Actor', sans-serif
font_secondary = 'Actor', sans-serif

html
	width 100%
	height 100%

body
	width 100%
	height 100%
	color iq_grey
	background iq_black
	font 16px/1, font_main
	letter-spacing 0.48px
	-webkit-font-smoothing antialiased

div
	display block

.wrapper
	position relative
	width 100%
	height 100%
	background iq_black


/*
*Start Sticky-wrapper styling
*/
.sticky-wrapper
	height 58px

#header
	width 100%
	top 0
	left 0
	height auto
	box-sizing border-box
	background iq_black
	color iq_white
	padding 13px 0
	z-index 3
	transition all 0.3s ease-in-out
	.container
		position relative
		display table
		width 100%
		height 100%

.stuck
	position fixed !important

.container, .wsite-footer
	margin 0 auto
	max-width: 1100px
	margin 0 auto
	padding 0 2.5em
	box-sizing border-box

#logo, #logo a
	text-transform uppercase
	color iq_white
	line-height 1
	font-weight 300
	letter-spacing 0.78px
	text-align center

#logo
	display table-cell
	vertical-align middle

.wsite-logo
	display inline-block
	vertical-align top

a
	color iq_orange
	text-decoration none

#wsite-title
	font-size 2em
	
.wsite-logo img, .wsite-logo span
	vertical-align top !important


/* 
+ User agent stylesheet
*/
a:-webkit-any-link
	color webkit-link
	text-decoration underline
	cursor auto


/*
 * Medium Screen
 */

@media (max-width: 767px)
	body
		font-size 14px

	.container
		padding 0 1em

	#logo #wsite-title
		font-size 1.5em !important